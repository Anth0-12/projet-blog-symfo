{% extends 'base.html.twig' %}

{% block title %} {{ article.title }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>{{article.title}}</h1>

        <hr>

        {{ article.content|raw }}

        <h2 class="comment-title nt-5">
            <span class="comment-count">{{ article.comments|length }} </span> commentaire(s)
        </h2>

        <hr>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %} {# on affiche les commentaires uniquement si on est connect√© #}
        
        <div class="comment-area mb-5">
            {{ form(commentForm, { 'attr': { 'class': 'comment-form' } }) }}
        </div>
        
    {% endif %}

        <div class="comment-list">
            {% for comment in article.comments %}
                {% include 'comment/index.html.twig' with [comment] %}
            {% endfor %}
        </div>
    </div>

{% endblock %}
